<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sean.takeastand" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeWithoutActionBarIcon">

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ScheduleListActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.ScienceActivity" />
        <receiver android:name=".alarmprocess.AlarmReceiver" ></receiver>
        <receiver android:name=".alarmprocess.StartScheduleReceiver" ></receiver>
        <service android:name=".alarmprocess.AlarmService"></service>
    </application>

</manifest>
