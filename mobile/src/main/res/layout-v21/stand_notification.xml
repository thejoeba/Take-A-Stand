<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="64dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_notification"
        android:layout_marginLeft="12dp"
        android:background="@drawable/ic_stat_circle_shape_gray"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignTop="@+id/imageView">
        <TextView
            android:id="@+id/topTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
            android:text="@string/app_name" />
        <TextView
            android:id="@+id/stand_up_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textAppearance="@android:style/TextAppearance.Material.Notification"
            android:textSize="15sp"
            android:text="@string/stand_up_time_up"/>
    </LinearLayout>

    <ImageView
        android:src="@drawable/ic_action_done"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_stat_circle_shape_black"
        android:id="@+id/btnStood"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:visibility="visible" />

</RelativeLayout>