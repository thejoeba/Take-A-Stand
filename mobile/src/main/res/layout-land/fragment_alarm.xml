<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <!-- Will alternate visibility; will set alert time visible then animate out; then set the other
    visible animate out;  they will be visible less often than other elements; decelerate in, accelerate
    out
    -->
    <LinearLayout
        android:id="@+id/next_alert_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/next_alert_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/next_alert_at"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_light"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/next_alert_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="19sp"
            android:textColor="@android:color/primary_text_light"
            android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stood_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:visibility="visible">
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/ic_action_stood_check"
                />
            <TextView
                android:id="@+id/stood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stood"
                android:textSize="32sp"
                android:textColor="@android:color/primary_text_light"
                android:padding="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/paused_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/paused_until_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/paused_until"
                android:textSize="20sp"
                android:textColor="@android:color/primary_text_light"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/paused_until_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="19sp"
                android:textColor="@android:color/primary_text_light"
                android:layout_gravity="center"/>
        </LinearLayout>
</RelativeLayout>