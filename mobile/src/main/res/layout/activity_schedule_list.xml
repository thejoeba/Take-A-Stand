<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ListView 
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@android:id/list" >
    </ListView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <ImageView
            android:id="@+id/btn_add_alarm"
            android:layout_width="@dimen/footer_button_size"
            android:layout_height="@dimen/footer_button_size"
            android:layout_marginTop="@dimen/footer_layout_margin"
            android:layout_marginBottom="@dimen/footer_layout_margin"
            android:layout_marginRight="@dimen/footer_layout_margin"
            android:layout_marginLeft="@dimen/footer_layout_margin"
            android:layout_marginStart="@dimen/footer_layout_margin"
            android:layout_marginEnd="@dimen/footer_layout_margin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_alarm"/>
    </FrameLayout>
</FrameLayout>