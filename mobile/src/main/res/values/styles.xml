<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppThemeWithoutActionBarIcon" parent="android:Theme.Holo.Light">
        <item name="actionBarStyle">@style/ActionBarWithoutIcon</item>
    </style>
    <style name="ActionBarWithoutIcon" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="icon">@android:color/transparent</item>
    </style>

    <style name="Theme.MaterialTheme" parent="Theme.AppCompat.Light">
        <!-- Set AppCompat’s actionBarStyle -->
        <item name="actionBarStyle">@style/ActionBarWithoutIcon</item>
        <item name="windowActionBar">false</item>

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#A5D6A7</item>
    </style>
</resources>
